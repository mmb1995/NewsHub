<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:actionMenuTextColor">@color/primaryTextColor</item>
    </style>

    <style name="NytTextStyle" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NytTextStyle.TitleStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="NytTextStyle.AbstractStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NytTextStyle.OtherStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
      <item name="android:textColor">@color/secondaryColor</item>
    </style>

</resources>
